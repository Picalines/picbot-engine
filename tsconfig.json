{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "target": "ES6",
        "module": "commonjs",
        "outDir": "dist",
        "incremental": true,
        "moduleResolution": "node",
        "removeComments": false,
        "skipLibCheck": true,
        "declaration": true,
        "declarationDir": "types",
        "lib": [
            "es2020.string",
        ],
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts",
    ],
}