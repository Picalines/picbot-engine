{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "target": "ES6",
        "module": "ES2020",
        "outDir": "./dist/esm",
        "incremental": true,
        "removeComments": false,
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
    },
    "include": [
        "./src/",
    ],
    "exclude": [
        "./node_modules/",
        "**/*.spec.ts",
        "**/*.test.ts",
    ],
}